.container {
  padding: 20rpx;
}
.item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}
.info {
  margin-bottom: 20rpx;
}
.info text {
  display: block;
  margin-bottom: 10rpx;
}
.id-img {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
}
.actions {
  display: flex;
  justify-content: space-between;
}
.actions button {
  width: 45%;
}
.approve {
  background-color: #07C160;
  color: white;
}
.reject {
  background-color: #FF4949;
  color: white;
}
.empty {
  text-align: center;
  color: #888;
  margin-top: 100rpx;
}