/* pages/forum/index.wxss */

/* 论坛容器 */
.forum-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F8F8F8;
}

/* 顶部导航栏 */
.forum-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  padding-top: env(safe-area-inset-top, 44rpx);
  height: calc(90rpx + env(safe-area-inset-top, 44rpx));
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #EEEEEE;
  position: sticky;
  top: 0;
  z-index: 100;
}

.forum-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.forum-search {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 分类标签栏 */
.category-scroll {
  width: 100%;
  white-space: nowrap;
  background-color: #FFFFFF;
  height: 80rpx;
  position: sticky;
  top: calc(90rpx + env(safe-area-inset-top, 44rpx));
  z-index: 99;
}

.category-container {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.category-item.active {
  color: #3A7BF8;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #3A7BF8;
  border-radius: 2rpx;
}

/* 帖子列表容器 */
.posts-list-container {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 140rpx;
  line-height: 1;
  color: #CCCCCC;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  background: transparent url("data:image/svg+xml;base64,") no-repeat;
  background-size: 100%;
  animation: loading 1s steps(12, end) infinite;
}

@keyframes loading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载完毕提示 */
.loading-end {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999999;
}

/* 悬浮发帖按钮 */
.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: #3A7BF8;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(58, 123, 248, 0.3);
  z-index: 999;
}

.publish-icon {
  font-size: 56rpx;
  color: #FFFFFF;
  font-weight: 300;
  line-height: 1;
}

/* 帖子卡片样式将在模板中定义 */