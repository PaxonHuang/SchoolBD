/* pages/post-detail/index.wxss */

.detail-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F8F8F8;
}

/* 顶部导航栏 */
.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 90rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #EEEEEE;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  line-height: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.share-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 加载中 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
  margin-top: 20rpx;
}

/* 帖子详情区域 */
.detail-scroll {
  flex: 1;
  overflow: hidden;
}

.post-detail {
  background-color: #FFFFFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 用户信息区 */
.detail-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.detail-user-name-time {
  flex: 1;
}

.detail-user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.detail-post-time {
  font-size: 24rpx;
  color: #999999;
}

.post-category {
  padding: 6rpx 16rpx;
  background-color: rgba(58, 123, 248, 0.1);
  border-radius: 20rpx;
}

.category-text {
  font-size: 24rpx;
  color: #3A7BF8;
}

/* 帖子内容区 */
.detail-content {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.detail-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

/* 图片区域 */
.detail-images {
  margin-top: 20rpx;
}

.detail-image {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

/* 互动区域 */
.detail-interaction {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #EEEEEE;
}

.detail-interaction-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.detail-interaction-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  line-height: 1;
}

.detail-interaction-icon.active {
  color: #FF4757;
}

.detail-interaction-icon.collected {
  color: #FFC107;
}

.detail-interaction-count {
  font-size: 28rpx;
  color: #666666;
}

.detail-interaction-item.liked .detail-interaction-count {
  color: #3A7BF8;
}

.detail-interaction-item.collected .detail-interaction-count {
  color: #FF9500;
}

.detail-share-btn {
  display: flex;
  align-items: center;
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.detail-share-btn::after {
  border: none;
}

/* 评论区 */
.comment-section {
  background-color: #FFFFFF;
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 空评论状态 */
.empty-comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  line-height: 1;
  color: #CCCCCC;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.loading-end {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding: 30rpx 0;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #EEEEEE;
  z-index: 100;
}

.comment-input-box {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

.comment-input {
  width: 100%;
  height: 70rpx;
  background-color: #F8F8F8;
  border-radius: 35rpx;
  padding: 0 30rpx;
  padding-right: 70rpx;
  font-size: 28rpx;
  color: #333333;
}

.placeholder {
  color: #CCCCCC;
}

.comment-counter {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999999;
}

.comment-submit-btn {
  width: 120rpx;
  height: 70rpx;
  background-color: #3A7BF8;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFFFFF;
}

.comment-submit-btn.disabled {
  background-color: #CCCCCC;
}

/* 帖子不存在 */
.not-found {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.not-found-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.not-found-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

.back-home-btn {
  padding: 20rpx 60rpx;
  background-color: #3A7BF8;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}