/* templates/forum-templates.wxss */

/* 帖子卡片样式 */
.post-card {
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 用户信息区 */
.post-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name-time {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

/* 帖子内容区 */
.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-summary {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 图片区域 */
.post-images {
  margin-top: 16rpx;
}

.post-image-single {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
}

.post-image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -4rpx;
}

.post-image-item {
  width: calc(33.33% - 8rpx);
  height: 200rpx;
  margin: 4rpx;
  border-radius: 8rpx;
  position: relative;
}

.post-image-count {
  position: absolute;
  right: 4rpx;
  bottom: 4rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

/* 互动区域 */
.post-interaction {
  display: flex;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.interaction-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.interaction-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.interaction-count {
  font-size: 24rpx;
  color: #999999;
}

.post-category {
  margin-left: auto;
}

.category-text {
  font-size: 24rpx;
  color: #3A7BF8;
  background-color: rgba(58, 123, 248, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

/* 评论项样式 */
.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-content {
  flex: 1;
}

.comment-user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999999;
}

/* 帖子详情样式 */
.post-detail {
  background-color: #FFFFFF;
  padding: 30rpx;
}

.detail-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.detail-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.detail-user-name-time {
  flex: 1;
}

.detail-user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.detail-post-time {
  font-size: 24rpx;
  color: #999999;
}

.detail-content {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.detail-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.detail-images {
  margin-top: 20rpx;
}

.detail-image {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.detail-interaction {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
}

.detail-interaction-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  padding: 10rpx 0;
}

.detail-interaction-item.liked {
  color: #3A7BF8;
}

.detail-interaction-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.detail-interaction-count {
  font-size: 28rpx;
  color: #666666;
}

.detail-interaction-item.liked .detail-interaction-count {
  color: #3A7BF8;
}

.detail-share-btn {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  display: flex;
  align-items: center;
  line-height: normal;
}

.detail-share-btn::after {
  border: none;
}